<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('partials/head'); %>
</head>

<body>
    <div class="wrapper">

        <%- include('partials/sidebar'); %>

            <div class="main">

                <%- include('partials/header'); %>

                    <main class="content">
                        <div class="container-fluid p-0">

                            <h1 class="h3 mb-3">
                                <%= titre %>
                            </h1>

                            <div class="row">
                                <div class="col-sm-8">
                                    <div class="card flex-fill p-4">
                                        <table id="datatables-reponsive" class="table table-striped" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Libelle</th>
                                                    <th>Acronyme</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% data.forEach( el=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= el.libelle %>
                                                        </td>
                                                        <td>
                                                            <%= el.acronyme %>
                                                        </td>
                                                        <td>
                                                            <button class="btn btn-primary modifier"
                                                                data-id="<%= el.id %>" data-libelle="<%= el.libelle %>"
                                                                data-acronyme="<%= el.acronyme %>">Modifier</button>
                                                            <button class="btn btn-danger supprimer"
                                                                data-id="<%= el.id %>"
                                                                data-libelle="<%= el.libelle %>">Supprimer</button>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="card p-4">
                                        <form id="createprovince">
                                            <div class="mb-3">
                                                <label for="libelle" class="form-label">Libelle de la province</label>
                                                <input type="text" class="form-control" id="libelle">
                                            </div>
                                            <div class="mb-3">
                                                <label for="acronyme" class="form-label">Acronyme</label>
                                                <input type="text" class="form-control" id="acronyme">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Ajouter</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>

                    <!-- Modale de modification de la province -->
                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                        tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="staticBackdropLabel">Modification province</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="updateprovince">
                                        <input type="hidden" name="idm" id="idm">
                                        <div class="mb-3">
                                            <label for="libellem" class="form-label">Libelle de la province</label>
                                            <input type="text" class="form-control" id="libellem">
                                        </div>
                                        <div class="mb-3">
                                            <label for="acronymem" class="form-label">Acronyme</label>
                                            <input type="text" class="form-control" id="acronymem">
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Fermer</button>
                                            <button type="submit" class="btn btn-primary">Modifier</button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>

                    <footer class="footer">
                        <div class="container-fluid">
                            <div class="row text-muted">
                                <div class="col-6 text-start">
                                    <p class="mb-0">
                                        <a class="text-muted" href="https://adminkit.io/"
                                            target="_blank"><strong>AdminKit</strong></a> &copy;
                                    </p>
                                </div>
                            </div>
                        </div>
                    </footer>
            </div>
    </div>

    <%- include('partials/footer'); %>
        <script src="/javascripts/datatables.js"></script>
        <script src="/javascripts/fag/provinces.js"></script>

</body>

</html>